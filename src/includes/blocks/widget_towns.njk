{% macro block(data) %}
    <section class="widget-towns palette-secondary">
        {% for item in towns %}
        <div id="{{ item.town }}" class="widget-towns__town" scroll-item>
            <h3>{{ item.town | safe }}</h3>
            <ul>
                {% for street in item.streets %}
                    <li class={{ street.class }}><b>_{{ loop.index }}_</b>{{ street.text }}</li>
                {% endfor %}
            </ul>
        </div>
         {% endfor %}
    </section>
{% endmacro %}
